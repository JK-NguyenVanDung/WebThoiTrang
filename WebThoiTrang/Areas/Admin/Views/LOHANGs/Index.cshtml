@model IEnumerable<WebThoiTrang.Models.LOHANG>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MALOHANG)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MANPP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NGAYNHAP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NHAPHANKHOI.EMAIL)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="productList" ondblclick='location.href="@Url.Action( "Details",new { id = item.MALOHANG })"'>
            <td>
                @Html.DisplayFor(modelItem => item.MALOHANG)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MANPP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NGAYNHAP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NHAPHANKHOI.EMAIL)
            </td>
            <td>
                <i onclick='location.href="@Url.Action( "Edit",new { id = item.MALOHANG })"' class="fas fa-pen edit"> </i>
                <i onclick='location.href="@Url.Action( "Delete",new { id = item.MALOHANG })"' class="far fa-trash-alt delete"></i>
            </td>
        </tr>
    }

</table>
