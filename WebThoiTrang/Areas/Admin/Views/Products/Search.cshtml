

@model IEnumerable<WebThoiTrang.Models.Product>

@{
    ViewBag.Title = "Searching";
    string path = HttpContext.Current.Request.Url.Query;
    string[] newPath = path.Split('=');
    string query = newPath[1];

}


<head>
    <!-- Css Styles -->
    <link rel="stylesheet" href="~/Assets/HomePage/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="~/Assets/HomePage/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/Assets/HomePage/css/themify-icons.css" type="text/css">
    <link rel="stylesheet" href="~/Assets/HomePage/css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="~/Assets/HomePage/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="~/Assets/HomePage/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="~/Assets/HomePage/css/jquery-ui.min.css" type="text/css">
    <link rel="stylesheet" href="~/Assets/HomePage/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="~/Assets/HomePage/css/style.css" type="text/css">
    <script src="~/Assets/HomePage/js/jquery-3.3.1.min.js"></script>
    <script src="~/Assets/HomePage/js/bootstrap.min.js"></script>
    <script src="~/Assets/HomePage/js/jquery-ui.min.js"></script>
    <script src="~/Assets/HomePage/js/jquery.countdown.min.js"></script>
    <script src="~/Assets/HomePage/js/jquery.nice-select.min.js"></script>
    <script src="~/Assets/HomePage/js/jquery.zoom.min.js"></script>
    <script src="~/Assets/HomePage/js/jquery.dd.min.js"></script>
    <script src="~/Assets/HomePage/js/jquery.slicknav.js"></script>
    <script src="~/Assets/HomePage/js/owl.carousel.min.js"></script>
    <script src="~/Assets/HomePage/js/main.js"></script>
    <style>
        a {
            text-decoration: none;
        }

        nav a {
            color: black;
        }

        nav span {
            font-size: 2rem;
        }

        nav a:hover {
            color: rebeccapurple;
        }

        a {
            color: black;
        }

            a:hover {
                color: #ffa7a7;
            }
        ul,ol,li{
            list-style:none;
        }
    </style>
</head>

<body >
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <nav style="padding-top:3%; padding-left: 10%;">
        <a href="../../Admin" class="link">Admin</a> > <a href="../Products" class="link">Products</a>
    </nav>
    <section class="product-shop spad container">
        <div class="bodyCont" style="margin:auto;">
            <div class="row">
                <div class="col-lg-12 order-1 order-lg-2">
                    <div class="product-show-option">
                        <div class="row">

                            <div class="row product-btn d-flex justify-content-end align-items-end">
                                <!-- Section Tittle -->
                                <div class="col-xl-4 col-lg-5 col-md-5">
                                    <div class="section-tittle mb-30">
                                        <h2> Search Result of @query</h2>
                                    </div>
                                </div>
                                <div class="col-xl-8 col-lg-7 col-md-7">
                                    <div class="properties__button f-right">
                                        <!--Nav Button  -->
                                        <!--End Nav Button  -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="product-list">
                        <div class="row">
                            @if (Model.Count() == 0)
                            {
                                <div class="col-md-12 text-center">
                                    <p>There is so result for @query in the store, Please check if your keywords are correct.</p>
                                </div>}
                            @foreach (var item in Model)
                            {
                                <div class="col-xl-4 col-lg-4 col-md-6">
                                    <div class="single-product mb-60">
                                        <div class="product-img">
                                            <a href="../../Products/Details/@item.MASP">
                                                <img class="productIMG" src="~/Assets/Images/@item.ANHSP" alt="">
                                            </a>
                                            <div class="new-product">
                                                <span>New</span>
                                            </div>
                                        </div>
                                        <div class="product-caption">
                                            <div class="product-ratting">
                                                <i class="far fa-star"></i>
                                                <i class="far fa-star"></i>
                                                <i class="far fa-star"></i>
                                                <i class="far fa-star low-star"></i>
                                                <i class="far fa-star low-star"></i>
                                            </div>
                                            <h4><a href="Products/Details/@item.MASP">@item.TENSANPHAM</a></h4>
                                            <div class="price">
                                                <ul>
                                                    <li>$@item.GIATIEN</li>
                                                    <li class="discount">@item.GIATIEN</li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            };
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
    <!-- Latest Products End -->
    <!-- Best Product Start -->
</body>
