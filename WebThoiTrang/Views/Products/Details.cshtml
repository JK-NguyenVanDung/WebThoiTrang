<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Fashi Template">
    <meta name="keywords" content="Fashi, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Fashi | Template</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Muli:300,400,500,600,700,800,900&display=swap" rel="stylesheet">

    <!-- Css Styles -->
    <link rel="stylesheet" href="~/Assets/HomePage/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="~/Assets/HomePage/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/Assets/HomePage/css/themify-icons.css" type="text/css">
    <link rel="stylesheet" href="~/Assets/HomePage/css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="~/Assets/HomePage/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="~/Assets/HomePage/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="~/Assets/HomePage/css/jquery-ui.min.css" type="text/css">
    <link rel="stylesheet" href="~/Assets/HomePage/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="~/Assets/HomePage/css/style.css" type="text/css">
    <style>
        a{
            color: black;
        }
        a:hover{
            color:blueviolet;
        }
    </style>
</head>
<body style="margin: 0; padding:0;">
    <section class="product-shop spad page-details mb-10">
    <nav style="        margin-top: 3%;
        margin-left: 2%;
        margin-bottom: 3%;
">
        <a href="../../Home" class="link" >Home</a> > <a href="../../Home" class="link">Products</a> > <a href="./@Html.DisplayFor(model => model.MASP)">@Html.DisplayFor(model => model.TENSANPHAM)</a>
    </nav>
    <div class="container">
        <div class="row">

            <div class="col-lg-10">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="product-pic-zoom">
                            <img class="product-big-img" src="../../assets/images/@Html.DisplayFor(model => model.ANHSP)" />
                            <div class="zoom-icon">
                                <i class="fa fa-search-plus"></i>
                            </div>
                        </div>
                        @*<div class="product-thumbs">
                                <div class="product-thumbs-track ps-slider owl-carousel">
                                    <div class="pt active" data-imgbigurl="../../assets/images/@Html.DisplayFor(model => model.ANHSP)">
                                        <img src="../../assets/images/@Html.DisplayFor(model => model.ANHSP)" alt="">
                                    </div>

                                </div>
                            </div>*@
                    </div>
                    <div class="col-lg-6">
                        <div class="product-details">
                            <div class="pd-title">
                                <span>
                                    @Html.DisplayFor(model => model.THUONGHIEU)
                                </span>
                                <h3>
                                    @Html.DisplayFor(model => model.TENSANPHAM)
                                </h3>
                                <a href="#" class="heart-icon"><i class="icon_heart_alt"></i></a>
                            </div>
                            <div class="pd-rating">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star-o"></i>
                                <span>(5)</span>
                            </div>
                            <div class="pd-desc">
                                <p>
                                    @Html.DisplayFor(model => model.MOTA)

                                </p>
                                <h4>
                                    $@Html.DisplayFor(model => model.GIATIEN)
                                    <span>@Html.DisplayFor(model => model.GIATIEN)</span>
                                </h4>
                            </div>
                            <div class="pd-color">
                                <h6>Color</h6>

                                <div class=" pd-color-choose colors">
                                    <ul class="pd-color-choose">
                                        <li>
                                            <label>
                                                <input type="radio" name="color" value="#@Html.DisplayFor(model => model.MAU)">
                                                <span class="swatch" style="background-color:#@Html.DisplayFor(model => model.MAU)"></span>
                                            </label>
                                        </li>

                                    </ul>
                                </div>
                            </div>
                            <div class="pd-size-choose">
                                <hr />
                                Size
                                <div class="form-group">
                                    <div class="colors">
                                        <ul>
                                            <li>
                                                <label>
                                                    <input type="radio" name="size" value="@Html.DisplayFor(model => model.SIZE)">
                                                    <label for=”size″>@Html.DisplayFor(model => model.SIZE)</label>
                                                </label>
                                            </li>

                                        </ul>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.SIZE, "", new { @class = "text-danger" })
                                </div>
                                <hr>
                                @*<div class="sc-item">
                                        <input type="radio" id="sm-size">
                                        <label for="sm-size">s</label>
                                    </div>
                                    <div class="sc-item">
                                        <input type="radio" id="md-size">
                                        <label for="md-size">m</label>
                                    </div>
                                    <div class="sc-item">
                                        <input type="radio" id="lg-size">
                                        <label for="lg-size">l</label>
                                    </div>
                                    <div class="sc-item">
                                        <input type="radio" id="xl-size">
                                        <label for="xl-size">xs</label>
                                    </div>*@
                            </div>

                            <form action="@Url.Action("Create", "Cart")" method="post" class="quantity">
                                <input type="hidden" name="ProductId" value="@Model.MASP" />
                                <div class="pro-qty">
                                    <input class="Quantity" min="0" name="quantity" value="1" type="text">
                                </div>
                                <div class="add_to_cart">
                                    <button type="submit" class="primary-btn pd-cart">
                                        <i class="fas fa-shopping-cart pr-2"></i>Add to cart
                                    </button>
                                </div>
                            </form>
                            @*<ul class="pd-tags">
                                    <li><span>CATEGORIES</span></li>
                                    <li><span>TAGS</span>: Clothing, T-shirt, Woman</li>
                                </ul>
                                <div class="pd-share">
                                    <div class="p-code">Sku : 00012</div>
                                    <div class="pd-social">
                                        <a href="#"><i class="ti-facebook"></i></a>
                                        <a href="#"><i class="ti-twitter-alt"></i></a>
                                        <a href="#"><i class="ti-linkedin"></i></a>
                                    </div>
                                </div>*@
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
    <script src="~/Assets/HomePage/js/jquery-3.3.1.min.js"></script>
    <script src="~/Assets/HomePage/js/bootstrap.min.js"></script>
    <script src="~/Assets/HomePage/js/jquery-ui.min.js"></script>
    <script src="~/Assets/HomePage/js/jquery.countdown.min.js"></script>
    <script src="~/Assets/HomePage/js/jquery.nice-select.min.js"></script>
    <script src="~/Assets/HomePage/js/jquery.zoom.min.js"></script>
    <script src="~/Assets/HomePage/js/jquery.dd.min.js"></script>
    <script src="~/Assets/HomePage/js/jquery.slicknav.js"></script>
    <script src="~/Assets/HomePage/js/owl.carousel.min.js"></script>
    <script src="~/Assets/HomePage/js/main.js"></script>

</body>