    ViewBag.Title = "Home Page";
    var GIAMGIA = ViewBag.MAGIAMGIA as List<Coupon>;
    Coupon giamGia1 = null;
    Coupon giamGia2 = null;

    foreach (var coupon in GIAMGIA)
