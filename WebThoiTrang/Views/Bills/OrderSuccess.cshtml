@using WebThoiTrang.Models
@model WebThoiTrang.Models.Bill
@{
    ViewBag.Title = "Create";
    var billDetails = ViewBag.BillDetails as List<BillDetail>;
    int total = 0;
}
    <html>
    <head>
        <meta charset="utf-8" />
        <title>Order Completed</title>
    </head>
    <body>
        <div class="container" style="margin-top:5%; ">
            <p class="abc" style="margin-bottom:2%">Order Confirmed</p>
            <div class="container " style="        margin: auto;
        text-align: center;margin-bottom: 5%;
">

                <div class="row" style="margin-left:13%">
                    <div class="col-md-2"><i style="color:black;" class="fas fa-shopping-cart"></i></div>
                    <div class="col-md-2"><i style="color: black;" class="far fa-credit-card "></i></div>
                    <div class="col-md-2"><i style="color: lightcoral;" class="far fa-list-alt"></i></div>
                    <div class="col-md-2"><i style="color:black;" class="fa fa-truck "></i></div>
                    <div class="col-md-2"><i style="color:black;" class="fa fa-clipboard-check "></i></div>
                </div>
                <div class="row" style="margin-left: 13%">
                    <div class="col-md-2">1. Checkout</div>
                    <div class="col-md-2">2. Payment</div>
                    <div class="col-md-2" style="color: lightcoral;">3. Confirmation</div>
                    <div class="col-md-2">4. Shipment</div>
                    <div class="col-md-2">5. Delivered</div>
                </div>

            </div>
            <!---->
            <div class="container">
                <div class="row">
                    <!---->
                    <div class="col-md-6">
                        <div><img src="~/Assets/Images/order.jpg" width="500" height="350"></div>
                        <br />
                        <p class="abc">Order Confirmed</p>
                        <p style="text-align: center; margin-right: 20%;">Your order have been confirmed, please wait and track your order</p></br>
                        <div class="row">
                            <div class="col-md-6">@DateTime.Now.ToString("hh:mm tt- dddd, dd MMMM yyyy") </div>
                            <div class="col-md-6">Confirmed Order, Product is Packaged</div>
                        </div></br>
                        <div class="row">
                            <div class="col-md-6">@DateTime.Now.ToString("hh:mm tt- dddd, dd MMMM yyyy")</div>
                            <div class="col-md-6">Confirmed with Shipping Partner, Driver is coming</div>
                        </div>
                    </div>
                    <!---->
                    <div class="col-md-6">
                        </br></br>
                        <div class="row">
                            <div class="col-md-6"><i class="far fa-clock"> 10 days delivery</i></div>
                            <div class="col-md-6"><i class="fas fa-truck-moving"> DHL Express</i></div>
                        </div>
                        </br></br>
                        @foreach (var item in billDetails)
                        {
                            if (item.MAHD == Model.MAHOADON)
                            {
                                <div>@item.Product.TENSANPHAM</div>
                                <div>@item.SOLUONG x @item.Product.GIATIEN</div>
                                total += item.SOLUONG * @item.Product.GIATIEN;
                            }
                        }
                        </br></br></br>
                        <div class="row">
                            <div class="col-md-6">Subtotal</div>
                            <div class="col-md-6">@total Đ</div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">Shipping Cost</div>
                            <div class="col-md-6">20.000 Đ</div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-md-6">Grand Total</div>
                            <div class="col-md-6">@Model.GIATHANHTOAN Đ</div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-md-6">Shipping Address</div>
                            <div class="col-md-6">
                                @Model.Address
                            </div>
                        </div>
                        <div style="margin-top:5%;">
                            @Html.ActionLink("Back to Shopping", "Index", "Home")
                        </div>
                    </div>
                    <!---->
                </div>
            </div>
        </div>

    </body>
</html>
